<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DriverHomeActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DriverHomeActivity" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:visibility="visible"
        map:chipBackgroundColor="@android:color/black"
        android:text="@string/decline"
        map:chipIcon="@drawable/baseline_clear_24"
        map:chipIconTint="@android:color/white"
        android:layout_margin="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_accept"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        map:cardBackgroundColor="@android:color/black"
        map:cardCornerRadius="8dp"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_type_uber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/uber_move"
                    tools:text="Uber"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circul_progress_bar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        map:cpb_background_progressbar_color="@android:color/white"
                        map:cpb_background_progressbar_width="3dp"
                        map:cpb_progress_direction="to_right"
                        map:cpb_round_border="false"
                        map:cpb_progressbar_color="@color/progress_bar_color"
                        map:cpb_progress_max="100"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_person_24"
                        map:tint="@android:color/white" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableRight="@drawable/baseline_star_24"
                    android:fontFamily="@font/uber_move"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>



            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_estimate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/uber_move"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                tools:text="2 min"/>

            <TextView
                android:id="@+id/text_estimate_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/uber_move"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                tools:text="0.5 km"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>


</FrameLayout>